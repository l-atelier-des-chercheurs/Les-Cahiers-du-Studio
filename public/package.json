{
  "name": "les-cahiers-du-studio",
  "version": "0.1.0",
  "description": "A time-based documentation tool to collaboratively keep notes and capture media from live experiences.",
  "author": "Louis Eveillard <barlou15+github@gmail.com>",
  "private": true,
  "scripts": {
    "watchify": "watchify -vd -p browserify-hmr -e src/main.js -o dist/build.js",
    "dev": "npm-run-all --parallel watchify",
    "lint": "eslint --ext .js,.vue src",
    "build": "cross-env NODE_ENV=production browserify -g envify -e src/main.js | uglifyjs -c warnings=false -m > dist/build.js"
  },
  "browserify": {
    "transform": [
      "babelify",
      "vueify",
      "node-lessify"
    ]
  },
  "browser": {
    "vue": "vue/dist/vue.common.js"
  },
  "dependencies": {
    "@xkeshi/vue-qrcode": "^0.3.0",
    "alertify.js": "^1.0.12",
    "debounce": "^1.1.0",
    "i18n": "^0.8.3",
    "jquery": "^3.3.1",
    "moment": "^2.20.1",
    "node-lessify": "^0.1.5",
    "node-sass": "^4.7.2",
    "portal-vue": "^1.3.0",
    "shoelace-css": "^1.0.0-beta9",
    "slugg": "^1.2.1",
    "socket.io": "^2.0.4",
    "store": "^2.0.12",
    "underscore": "^1.8.3",
    "vue": "^2.5.2",
    "vue-markdown": "^2.2.4",
    "vue-scrollto": "^2.8.0",
    "vue2-animate": "^1.0.4",
    "vue2-dropzone": "2.3.6"
  },
  "devDependencies": {
    "babel-core": "^6.0.0",
    "babel-plugin-transform-runtime": "^6.0.0",
    "babel-preset-es2015": "^6.0.0",
    "babel-preset-stage-2": "^6.0.0",
    "babel-runtime": "^6.0.0",
    "babelify": "^7.2.0",
    "browserify": "^13.1.0",
    "browserify-css": "^0.14.0",
    "browserify-hmr": "^0.3.1",
    "cross-env": "^2.0.0",
    "envify": "^3.4.1",
    "eslint": "^3.3.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^5.3.5",
    "eslint-plugin-html": "^1.5.2",
    "eslint-plugin-promise": "^2.0.1",
    "eslint-plugin-standard": "^2.0.0",
    "http-server": "^0.9.0",
    "npm-run-all": "^2.3.0",
    "proxyquireify": "^3.0.1",
    "uglify-js": "^2.5.0",
    "vueify": "^9.0.0",
    "watchify": "^3.4.0"
  }
}
