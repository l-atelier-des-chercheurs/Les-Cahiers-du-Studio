{
  "name": "les-cahiers-du-studio",
  "version": "0.1.0",
  "description": "A time-based documentation tool to collaboratively keep notes and capture media from live experiences.",
  "author": "Louis Eveillard <barlou15+github@gmail.com>",
  "private": true,
  "scripts": {
    "watchify": "watchify -vd -p browserify-hmr -e src/main.js -o dist/build.js",
    "dev": "npm-run-all --parallel watchify",
    "lint": "eslint --ext .js,.vue src",
    "build": "cross-env NODE_ENV=production browserify -g envify -e src/main.js | uglifyjs -c warnings=false -m > dist/build.js"
  },
  "browserify": {
    "transform": [
      "babelify",
      "vueify",
      "node-lessify"
    ]
  },
  "browser": {
    "vue": "vue/dist/vue.common.js"
  },
  "dependencies": {
    "@xkeshi/vue-qrcode": "^1.0.0",
    "alertify.js": "^1.0.12",
    "axios": "^0.18.0",
    "debounce": "^1.2.0",
    "i18n": "^0.8.3",
    "jquery": "^3.3.1",
    "moment": "^2.23.0",
    "node-lessify": "^0.1.5",
    "node-sass": "^4.11.0",
    "portal-vue": "^1.5.1",
    "quill": "^1.3.6",
    "reconnectingwebsocket": "^1.0.0",
    "sharedb": "^1.0.0-beta.17",
    "shoelace-css": "^1.0.0-beta9",
    "slugg": "^1.2.1",
    "socket.io": "^2.2.0",
    "store": "^2.0.12",
    "underscore": "^1.9.1",
    "vue": "^2.5.21",
    "vue-i18n": "^8.7.0",
    "vue-markdown": "^2.2.4",
    "vue-scrollto": "^2.13.0",
    "vue2-animate": "^1.0.4"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-plugin-transform-runtime": "^6.0.0",
    "babel-preset-es2015": "^6.0.0",
    "babel-preset-stage-2": "^6.0.0",
    "babel-runtime": "^6.0.0",
    "babelify": "^7.2.0",
    "browserify": "^16.2.3",
    "browserify-css": "^0.14.0",
    "browserify-hmr": "^0.3.7",
    "cross-env": "^5.2.0",
    "envify": "^4.1.0",
    "eslint": "^5.12.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-html": "^5.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "http-server": "^0.11.1",
    "npm-run-all": "^4.1.5",
    "proxyquireify": "^3.0.1",
    "uglify-es": "^3.3.10",
    "vueify": "^9.0.0",
    "watchify": "^3.4.0"
  }
}
